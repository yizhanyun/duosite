{
  "ignore": [
    ".git",
    ".cache",
    ".yarn",
    "node_modules/**/node_modules",
    "**/.production/**"
  ],
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "watch": [
    "sites/*/pages/",
    "sites/*/src/",
    "sites/*/components/",
    "src/",
    "server.mjs",
    "dev.mjs",
    "bootServer.mjs",
    "settings.mjs",
    "settings.development.mjs",
    "setting.production.mjs"
  ],
  "ext": "mjs,boot.mjs, html, marko"
}
